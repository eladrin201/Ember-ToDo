<h2>Enter your Todo</h2>
<div class="form-group">
	<div clss="col-sm-3">
		<label for="title">Title:</label>
		{{input value=todo.title id="title"}}
	</div>
</div>
<div class="form-group">
	<div clss="col-sm-3">
		<label for="completed">Completed:</label>
		{{input type='checkbox' checked=todo.isCompleted id="completed"}}
	</div>
</div>
<button class="btn btn-danger" {{action "confirm"}}>{{fa-icon "trash" ariaLabel="Remove Todo"}}</button>
<button class="btn btn-primary" {{action "save" todo}}>{{fa-icon "floppy-o" ariaLabel="Save Todo"}}</button>

{{#if hasConfirmed}}
	<div class="confirm-remove">
		<h2>Are you sure?</h2>
		<button class="btn btn-danger" {{action "remove" todo}}>{{fa-icon "trash"}} Delete todo</button>
	</div>
{{/if}}

{{yield}}
