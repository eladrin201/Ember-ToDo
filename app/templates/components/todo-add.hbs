<h2>Enter your Todo</h2>
<div class="form-group">
	<div clss="col-sm-3">
		<label for="title">Title:</label>
		{{input value=todo.title id="title"}}
	</div>
</div>
<div class="form-group">
	<div clss="col-sm-3">
		<label for="completed">Completed:</label>
		{{input type='checkbox' checked=todo.isCompleted id="completed"}}
	</div>
</div>
<button class="btn btn-secondary" {{action "remove" todo}}>{{fa-icon "times-circle"}} Cancel</button>
<button class="btn btn-primary" {{action "save" todo}}>{{fa-icon "floppy-o"}} Save</button>
{{yield}}
